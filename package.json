{
  "name": "chronograph-app",
  "version": "0.0.1",
  "description": "Chronograph Electron Application",
  "main": "./application/index.ts",
  "scripts": {
    "lint": "eslint --cache -c .eslintrc.js --ext .ts application",
    "build": "webpack --config ./config/webpack.production.js --mode=production",
    "watch": "webpack --watch --config ./config/webpack.development.js",
    "dev": "webpack serve --config ./config/webpack.development.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seneil/chronograph.git"
  },
  "author": {
    "name": "Dmitry Shvalyov",
    "url": "https://shvalyov.ru"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seneil/chronograph/issues"
  },
  "homepage": "https://github.com/seneil/chronograph#readme",
  "dependencies": {
    "electron": "15.3.0"
  },
  "devDependencies": {
    "@funboxteam/eslint-config": "6.0.1",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "eslint": "7.32.0",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "ts-loader": "9.2.6",
    "typescript": "4.4.4",
    "webpack": "5.60.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -q"
    }
  },
  "lint-staged": {
    "lib/**/*.ts": [
      "eslint --fix --cache -c .eslintrc.js"
    ]
  }
}
