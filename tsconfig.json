{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "out",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@application/*": ["application/*"],
      "@constants": ["constants", "constants/*"],
      "@frontend/*": ["frontend/*"],
      "@assets/*": ["assets/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "application/**/*",
    "frontend/**/*",
  ],
}
